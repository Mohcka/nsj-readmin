{
  "compilerOptions": {
    "module": "commonjs",
    // "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./public/javascript",
    "baseUrl": "./",
    "rootDir": "./frontend",
    "incremental": true,
    "jsx": "react"
  },
  "include": ["frontend/**/*"],
  "exclude": ["node_modules", "dist", "src", "test"]
}
